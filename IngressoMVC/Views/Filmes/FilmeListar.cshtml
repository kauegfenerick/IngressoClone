@{
    ViewData["Title"] = "FilmeListar";
}
@model IEnumerable<Filme> 
<div class="text-center">
    <h1>Filmes cadastrados</h1>
</div>
    <div class="row">
        <a class="btn btn-dark" href="#">Cadastrar</a>
        <input class="form-control col-md-3 offset-7" type="text" name="nome" id="nome" placeholder="Buscar">
    </div>
<div class="text-center mt-3">
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Capa do filme</th>
                <th scope="col">Título</th>
                <th scope="col">Descrição</th>
                <th scope="col">Preço</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
                @{
                    foreach (var filme in Model)
                    {   <tr>
                        <td><img src="@filme.ImagemURL" alt="@filme.Titulo" width="110"></td>
                        <td>@filme.Titulo</td>
                        <td>@filme.Descricao</td>
                        <td>@filme.Preco</td>
                        <td class="d-flex flex-column col-md-6 offset-3">
                            <a class="btn btn-dark" asp-action="FilmeAtualizar" asp-route-id="@filme.Id"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                            <a class="btn btn-dark mt-1" asp-action="FilmeDetalhes" asp-route-id="@filme.Id"><i class="fa-solid fa-eye"></i> Ver</a>
                            <a class="btn btn-danger mt-1" asp-action="FilmeDeletar" asp-route-id="@filme.Id"><i class="fa-solid fa-trash"></i> Excluir</a>
                        </td>
                        </tr>
                    }
                }
        </tbody>
    </table>
</div>